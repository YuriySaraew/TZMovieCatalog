@model MoviesListViewModel;

@{
    Layout = "_Layout";
    ViewBag.Title = "Каталог фильмов";
}
<div class="row mt-3">
    @foreach (var item in Model.Movies)
    {
        <div class="col-3">
            <a asp-action="MoviePage" asp-controller="Home" asp-route-id="@item.Id">
                <img class="img-fluid" src="@item.FilePath" alt="1">
            </a>
            <div class="text-center">@item.Name</div>
        </div>
    }
</div>
@if (Model.PagingInfo.TotalPages > 1)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination  pagination-md">
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item">
                    <a class="page-link bg-secondary text-white" href="?moviePage=@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else { }








